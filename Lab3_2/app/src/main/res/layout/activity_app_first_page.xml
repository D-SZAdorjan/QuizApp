<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppFirstPageActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25pt"
            android:background="@color/black"
            android:id="@+id/heder_main">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz App"
                android:textColor="@color/white"
                android:textSize="12pt"
                android:layout_marginLeft="7pt"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:layout_below="@+id/heder_main"
            android:id="@+id/intro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Name of the player is:"
            android:layout_centerHorizontal="true"
            android:textSize="10pt"
            android:layout_marginTop="20pt"/>
        <TextView
            android:id="@+id/name_of_player"
            android:layout_below="@+id/intro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10pt"
            android:textSize="9pt"
            android:textColor="@color/orange_f9100"/>
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>