<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homefragment_textview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/homefragment_testyourskillsbtn"
        android:textSize="20dp"
        android:text="Enjoy Quiz App where you can:" />
    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/homefragment_testyourskillsbtn"
        app:layout_constraintTop_toBottomOf="@+id/homefragment_textview"
        app:layout_constraintBottom_toTopOf="@+id/homefragment_readquestionsbtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Test Your Skills"/>
    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/homefragment_readquestionsbtn"
        app:layout_constraintTop_toBottomOf="@+id/homefragment_testyourskillsbtn"
        app:layout_constraintBottom_toTopOf="@id/homefragment_createquestionbtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Read Questions"/>
    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/homefragment_createquestionbtn"
        app:layout_constraintTop_toBottomOf="@+id/homefragment_readquestionsbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Create Question"/>

</androidx.constraintlayout.widget.ConstraintLayout>