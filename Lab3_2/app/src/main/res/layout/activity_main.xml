<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25pt"
            android:background="@color/black"
            android:id="@+id/heder_main">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz App"
                android:textColor="@color/white"
                android:textSize="12pt"
                android:layout_marginLeft="7pt"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz"
                android:layout_centerHorizontal="true"
                android:textSize="16pt"
                android:id="@+id/title_QA_main"/>

            <EditText
                android:layout_width="60pt"
                android:layout_height="20pt"
                android:layout_below="@id/title_QA_main"
                android:layout_marginTop="20pt"
                android:id="@+id/et_main"
                android:hint="Your Name"/>

            <Button
                android:id="@+id/btnContact"
                android:layout_width="60pt"
                android:layout_height="18pt"
                android:layout_below="@+id/et_main"
                android:layout_marginTop="20pt"
                android:text="Contact"
                android:textSize="6pt"
                android:backgroundTint="@color/orange_f9100"/>

            <Button
                android:id="@+id/btnGs"
                android:layout_width="60pt"
                android:layout_height="18pt"
                android:layout_below="@+id/btnContact"
                android:layout_marginTop="5pt"
                android:text="Get Started"
                android:textSize="6pt"
                android:backgroundTint="@color/orange_f9100"/>

        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>